    "type": "git",
    "url": "git+https://github.com/fradeneto/brazil-utils.git"
  },
  "bugs": {
    "url": "https://github.com/fradeneto/brazil-utils/issues"
  },
  "homepage": "https://github.com/fradeneto/brazil-utils#readme",
  "dependencies": {
    "class-validator": "^0.13.2"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
